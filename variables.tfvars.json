{
  "name": "my-service",
  "instance_count": 2,
  "port": 8000,
  "ecr_repository": "my-service",
  "iam_role": "my-service-iam-role",
  "root_domain": "test.com",
  "record_domain": "test.test.com",
  "min_capacity": 1,
  "max_capacity": 2,
  "instance_cpu": 1024,
  "instance_memory": 2048,
  "container_cpu": 512,
  "container_memory": 1024,
  "aws_region": "ap-northeast-2",
  "aws_profile": "default",
  "aws_provider": {
    "region": "ap-northeast-2",
    "profile": "default"
  },
  "aws_vpc": {
    "cidr_block": "10.0.0.0/16",
    "enable_dns_hostnames": true,
    "enable_dns_support": true,
    "instance_tenancy": "default",
    "tags": {
      "Name": "my-service-vpc"
    }
  },
  "aws_subnet": {
    "count": 2,
    "availability_zone": [
      "ap-northeast-2a",
      "ap-northeast-2b"
    ],
    "private_subnet": {
      "Name": "my-service-private-subnet-"
    },
    "public_subnet": {
      "Name": "my-service-public-subnet-"
    }
  },
  "aws_internet_gateway": {
    "name": "my-service-igw",
    "tags": {
      "Name": "my-service-igw"
    }
  },
  "aws_route": {
    "destination_cidr_block": "0.0.0.0/0"
  },
  "aws_eip": {
    "count": 2,
    "vpc": true,
    "tags": {
      "Name": "my-service-eip-"
    }
  },
  "aws_nat_gateway": {
    "count": 2
  },
  "aws_route_table": {
    "count": 2,
    "route": {
      "cidr_block": "0.0.0.0/0"
    }
  },
  "aws_route_table_association": {
    "count": 2
  },
  "aws_ecr_repository": {
    "name": "my-service-repository"
  },
  "aws_ecs_cluster": {
    "name": "my-service-cluster"
  },
  "aws_ecs_task_definition": {
    "family": "my-service-task-definition",
    "requires_compatibilities": [
      "FARGATE"
    ],
    "cpu": 1024,
    "memory": 2048,
    "network_mode": "awsvpc",
    "container_definitions": {
      "name": "my-service-container",
      "essential": true,
      "cpu": 512,
      "memory": 1024,
      "portMappings": {
        "containerPort": 8000,
        "hostPort": 8000,
        "protocol": "tcp"
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/my-service-log-group",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "/my-service-log-stream"
        }
      }
    }
  },
  "aws_ecs_service": {
    "name": "my-service-service",
    "desired_count": 2,
    "launch_type": "FARGATE",
    "network_configuration": {
      "assign_public_ip": true
    },
    "load_balancer": {
      "container_name": "my-service-container",
      "container_port": 8000
    }
  },
  "aws_acm_certificate": {
    "domain": "test.com"
  },
  "aws_route53_zone": {
    "name": "test.com"
  },
  "aws_route53_record": {
    "name": "test.test.com",
    "type": "A",
    "alias": {
      "evaluate_target_health": false
    }
  },
  "aws_alb_target_group": {
    "name": "my-service-target-group",
    "port": 80,
    "protocol": "HTTP",
    "target_type": "ip",
    "health_check": {
      "path": "/",
      "protocol": "HTTP",
      "interval": "30",
      "timeout": "3",
      "healthy_threshold": "5",
      "unhealthy_threshold": "2",
      "matcher": "200"
    }
  },
  "aws_alb_listener": {
    "http": {
      "port": "80",
      "protocol": "HTTP",
      "default_action": {
        "type": "redirect",
        "redirect": {
          "port": "443",
          "protocol": "HTTPS",
          "status_code": "HTTP_301"
        }
      }
    },
    "https": {
      "port": "443",
      "protocol": "HTTPS",
      "ssl_policy": "ELBSecurityPolicy-2016-08",
      "lifecycle": {
        "create_before_destroy": true
      },
      "default_action": {
        "type": "forward"
      }
    }
  },
  "aws_cloudwatch_log_group": {
    "name": "/my-service-log-group",
    "retention_in_days": 30,
    "tags": {
      "Name": "my-service-log-group"
    }
  },
  "aws_cloudwatch_log_stream": {
    "name": "my-service-log-stream"
  },
  "aws_appautoscaling_target": {
    "service_namespace": "ecs",
    "scalable_dimension": "ecs:service:DesiredCount",
    "min_capacity": 1,
    "max_capacity": 2
  },
  "aws_appautoscaling_policy": {
    "up": {
      "name": "my-service-up-policy",
      "service_namespace": "ecs",
      "scalable_dimension": "ecs:service:DesiredCount",
      "step_scaling_policy_configuration": {
        "adjustment_type": "ChangeInCapacity",
        "cooldown": 60,
        "metric_aggregation_type": "Maximum",
        "step_adjustment": {
          "metric_interval_lower_bound": 0,
          "scaling_adjustment": 1
        }
      }
    },
    "down": {
      "name": "my-service-down-policy",
      "service_namespace": "ecs",
      "scalable_dimension": "ecs:service:DesiredCount",
      "step_scaling_policy_configuration": {
        "adjustment_type": "ChangeInCapacity",
        "cooldown": 60,
        "metric_aggregation_type": "Maximum",
        "step_adjustment": {
          "metric_interval_upper_bound": 0,
          "scaling_adjustment": -1
        }
      }
    }
  },
  "aws_cloudwatch_metric_alarm": {
    "high": {
      "alert_name": "my-service-cpu-high-alarm",
      "comparison_operator": "GreaterThanOrEqualToThreshold",
      "evaluation_periods": "2",
      "metric_name": "CPUUtilization",
      "namespace": "AWS/ECS",
      "period": "60",
      "statistic": "Average",
      "threshold": "85"
    },
    "low": {
      "alert_name": "my-service-cpu-low-alarm",
      "comparison_operator": "LessThanOrEqualToThreshold",
      "evaluation_periods": "2",
      "metric_name": "CPUUtilization",
      "namespace": "AWS/ECS",
      "period": "60",
      "statistic": "Average",
      "threshold": "15"
    }
  },
  "aws_security_group": {
    "public": {
      "name": "my-service-public-sg",
      "description": "Controls access to the ALB my-service",
      "container_ingress": {
        "from_port": 8000,
        "to_port": 8000,
        "protocol": "tcp",
        "cidr_blocks": [
          "0.0.0.0/0"
        ]
      },
      "database_ingress": {
        "from_port": "3306",
        "to_port": "3306",
        "protocol": "tcp",
        "cidr_blocks": [
          "0.0.0.0/0"
        ]
      },
      "egress": {
        "from_port": 0,
        "to_port": 0,
        "protocol": "-1",
        "cidr_blocks": [
          "0.0.0.0/0"
        ]
      },
      "lifecycle": {
        "create_before_destroy": true
      }
    },
    "private": {
      "name": "my-service-private-sg",
      "description": "Controls access to the ECS my-service",
      "container_ingress": {
        "from_port": 8000,
        "to_port": 8000,
        "protocol": "tcp",
        "cidr_blocks": [
          "0.0.0.0/0"
        ]
      },
      "database_ingress": {
        "from_port": "3306",
        "to_port": "3306",
        "protocol": "tcp",
        "cidr_blocks": [
          "0.0.0.0/0"
        ]
      },
      "egress": {
        "from_port": 0,
        "to_port": 0,
        "protocol": "-1",
        "cidr_blocks": [
          "0.0.0.0/0"
        ]
      },
      "lifecycle": {
        "create_before_destroy": true
      }
    }
  },
  "aws_alb": {
    "name": "my-service-alb"
  }
}
