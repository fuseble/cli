{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@/index": ["index"],
      "@/utils": ["utils"],
      "@/openapi": ["openapi"],
      "@/template": ["template"],
      "@/github": ["github"],
      "@/terraform": ["terraform"],
      "@/files": ["files"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "outDir": "bin",
    "skipDefaultLibCheck": false
  },
  "include": ["src/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "bin"]
}
